    <div class="login-form">
      <form action="/register" method="post" name="register">
        <div class="container">
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col">
              <div class="card card-registration my-4">
                <div class="row g-0">
                  <div class="col-xl-6 d-none d-xl-block">
            <img src="images/reg.jpg"alt="Sample photo" class="img-fluid" style="border-top-left-radius: 0.25rem;border-bottom-left-radius:0.25rem;"/>
                  </div>
                  <div class="col-xl-6">
                    <div class="card-body p-md-5 text-black">
                      <h3 class="mb-5 text-uppercase" style="text-align: center;font-weight: bold;color: #c69b68;font-size: 50px;">
                        Register Now!
                      </h3>
                      <div class="error">
                        <% if (typeof errorMessage !== 'undefined') { %>
                        <p style="color: red"><%= errorMessage %></p>
                        <% } %>
                      </div>

                      <!-- First Name / Last Name -->
                      <div class="row">
                        <div class="col-md-6 mb-3">
                          <div class="form-outline">
                            <input type="text" id="firstName" name="firstName" placeholder="Firstname . . ." class="form-control form-control-lg" />
                          </div>
                        </div>
                        <div class="col-md-6 mb-3">
                          <div class="form-outline">
                            <input type="text" id="lastName" name="lastName" placeholder="Lastname . . ." class="form-control form-control-lg" />
                          </div>
                        </div>
                      </div>
                      <!-- Email -->
                      <div class="row">
                        <div class="col-md-12 mb-3">
                          <div class="form-outline">
                            <input type="text" id="email" name="email" placeholder="Email Address . . ." class="form-control form-control-lg" required />
                          </div>
                        </div>
                      </div>
                      <!-- Password -->
                      <div class="row">
                        <div class="col-md-6 mb-3">
                          <div class="form-outline position-relative">
                            <div class="input-group">
                              <input style="font-size: 15px" type="password" id="password" name="password" placeholder="Password . . ." class="form-control form-control-lg" />
                              <span class="input-group-text">
                                  <span id="togglePassword" class="fa-fw fa-eye far toggle-password"></span>
                              </span>
                          </div>
                          
                          </div>
                        </div>
                        <div class="col-md-6 mb-3">
                          <div class="form-outline">
                            <div class="input-group">
                              <input style="font-size: 15px" type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password. . ." class="form-control form-control-lg" />
                              <span class="input-group-text">
                                  <span id="toggleCpassword" class="fa-fw fa-eye far toggle-password"></span>
                              </span>
                          </div>
                          
                          </div>
                        </div>
                      </div>
                      <!-- Gender -->
                      <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                        <h6 style="color: #c69b68" class="mb-0 me-3">
                          Gender: &emsp;
                        </h6>
                        <div class="form-check form-check-inline mb-0 me-3">
                          <input class="form-check-input"type="radio"name="gender"id="femaleGender"value="Female"/>
                          <label class="form-check-label" for="femaleGender">Female</label>
                        </div>
                        <div class="form-check form-check-inline mb-0 me-3">
                          <input class="form-check-input"type="radio"name="gender"id="maleGender"value="Male"/>
                          <label class="form-check-label" for="maleGender">Male</label>
                        </div>
                        <div class="form-check form-check-inline mb-0">
                          <input class="form-check-input"type="radio"name="gender"id="otherGender"value="Other"/>
                          <label class="form-check-label" for="otherGender">Other</label>
                        </div>
                      </div>
                      <!-- Address -->
                      <div class="form-outline mb-3">
                        <input type="text" id="address" name="address" placeholder="Address . . ." class="form-control form-control-lg" />
                      </div>
                      <!-- Date of Birth -->
                      <div class="row">
                        <div class="col-md-6 mb-3 mb-4">
                          <input type="date" id="dateOfBirth" name="dateOfBirth" class="date form-control form-control-lg" />
                        </div>
                        <!-- Phone Number -->
                        <div class="col-md-6 mb-3 mb-4">
                          <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Phone number +63" class="form-control form-control-lg" />
                        </div>
                      </div>
                      <!-- User Type -->
                      <div class="input-field" hidden>
                        <label for="usertype">Choose User Type:</label>
                        <select name="usertype">
                          <!-- <option value="Admin">Admin</option>
          <option value="Manager">Manager</option> -->
                          <option value="User">User</option>
                        </select>
                      </div>
                      <!-- Register Button -->
                      <div class="action d-flex justify-content-center pt-3">
                        <button class="btn btns btn-lg ms-2">Register</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
    <script src="scripts/register.js"></script>
